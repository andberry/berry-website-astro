---
import BaseLayout from "@layouts/BaseLayout.astro";
import BlogCard from "@components/blog/BlogCard.astro";
import Container from "@components/utils/Container.astro";
import { getCollection } from "astro:content";
import H1 from "@components/typography/H1.astro";
import HeroTitle from "@components/typography/HeroTitle.astro";
const posts = await getCollection("blog");
---

<BaseLayout metaTitle="Homepage">
  <article>
    <Container size="medium">
      <header class="pt-16 pb-6 md:pt-20 md:pb-8 2xl:pt-24 2xl:pb-8">
        <HeroTitle>Berry's Blog</HeroTitle>
      </header>
      <section class="pb-24">
        {
          posts && (
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-x-8 gap-y-20">
              {posts.map((post) => (
                <BlogCard
                  title={post.data.title}
                  url={`/blog/${post.slug}`}
                  heroImage={post.data.heroImage}
                  tags={post.data.tags}
                />
              ))}
            </div>
          )
        }
      </section>
    </Container>
  </article>
</BaseLayout>
