---
import { Icon } from "astro-icon";

export interface Props {
  url: string;
  title?: string;
}

const { url, title = "Read the Article" } = Astro.props;
---

<a
  href={url}
  class="dark:text-white font-light p-2 leading-none flex items-center gap-2 group"
>
  <span
    class="flex-shrink-0 text-base group-hover:text-pink transition-all ease-out duration-200"
    >{title}</span
  >
  <Icon
    name="la:long-arrow-alt-right"
    class:list={[
      "w-5 dark:text-white leading-none mt-1 group-hover:translate-x-1",
      "transition-all ease-out duration-200",
      "dark:group-hover:text-greenyellow group-hover:text-purple",
    ]}
  />
</a>
