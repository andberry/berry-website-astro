---
interface Props {
  size?: "small" | "default" | "large";
  additionalClasses?: string;
}
const { size = "default", additionalClasses } = Astro.props;
const sizeClassMap = {
  small: "max-w-5xl",
  default: "max-w-7xl",
  large: "max-w-9xl",
};
---

<div class=`${sizeClassMap[size]} mx-auto px-10 xl:px-24 ${additionalClasses}`>
  <slot />
</div>
