---
import { links } from "@config/links";
import { Icon } from "astro-icon";
---

<nav>
  <ul class="flex items-center">
    {
      links.map((link) => {
        return (
          <li>
            <a
              class:list={[
                "block px-3 py-2 leading-none transition-all ease-linear duration-150",
                "dark:text-white dark:hover::text-greenyellow",
                "text-black0 hover:text-purple dark:hover:text-greenyellow",
              ]}
              href={link.url}
              target="_blank"
            >
              <span class="sr-only">{link.name}</span>
              <Icon class="w-5" name={link.iconName} />
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
