---
import { nav } from "@config/nav";
---

<nav id="desktop-nav">
  <ul class="flex">
    {
      nav.map((item) => (
        <li>
          <a
            class="py-2 px-6 text-lg font-light uppercase hover:text-pink2 dark:hover:text-grassGreen transition-all ease-linear duration-150"
            href={item.url}
          >
            {item.title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
