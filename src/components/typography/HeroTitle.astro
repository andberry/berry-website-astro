---
import type { HTMLTag } from "astro/types";
export interface Props {
  as?: HTMLTag;
  class?: string;
}
const { as: Tag = "h1", class: additionalClasses = "" } = Astro.props;
---

<Tag
  class:list={[
    "font-extrabold text-clamphero leading-[0.85] mb-6",
    additionalClasses,
  ]}
>
  <slot />
</Tag>
