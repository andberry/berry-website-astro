---
import type { HTMLTag } from "astro/types";
export interface Props {
  as?: HTMLTag;
  class?: string;
}
const { as: Tag = "h1", class: additionalClasses = "" } = Astro.props;
---

<Tag
  class:list={[
    "font-extrabold text-clamphero md:text-[10vw] lg:text-[7.5vw] xl:text-[6.4vw] 3xl:text-[6vw] leading-[0.95] mb-6 break-words",
    additionalClasses,
  ]}
>
  <slot />
</Tag>
