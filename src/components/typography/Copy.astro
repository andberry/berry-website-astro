---
export interface Props {
  size?: "small" | "medium" | "large";
}

const fontSizeMap: { [key in typeof size]: string } = {
  small: "text-sm xl:text-base",
  medium: "text-lg xl:text-xl",
  large: "text-2xl xl:text-3xl",
};
const { size = "medium" } = Astro.props;
---

<div class:list={["leading-[1.6] font-extralight", fontSizeMap[size], "pb-4"]}>
  <slot />
</div>
