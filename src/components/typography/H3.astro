---
import type { HTMLTag } from "astro/types";
export interface Props {
  as?: HTMLTag;
  class?: string;
}
const { as: Tag = "h3", class: additionalClasses = "" } = Astro.props;
---

<Tag
  class:list={[
    "font-bold text-clamph3 leading-[1.2] break-words",
    additionalClasses,
  ]}
>
  <slot />
</Tag>
