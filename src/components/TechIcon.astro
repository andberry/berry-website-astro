---
import { Icon } from "astro-icon";

export interface Props {
  icon: string;
  title: string;
}

const { icon, title } = Astro.props;
---

<div class="flex flex-col items-center">
  <Icon class="h-9" name={icon} text={title} />
  <div class="text-sm mt-2 text-center leading-none font-light dark:font-thin">
    {title}
  </div>
</div>
